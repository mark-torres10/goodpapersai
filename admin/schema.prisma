datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Paper {
  id                 String   @id @default(cuid())
  title              String   @default("")
  authors            String   @default("")
  journal            String   @default("")
  year               Int
  doi                String   @default("")
  url                String   @default("")
  abstract           String   @default("")
  isCurrentlyReading Boolean  @default(false)
  updates            Update[] @relation("Update_paper")
}

model Update {
  id         String    @id @default(cuid())
  paper      Paper?    @relation("Update_paper", fields: [paperId], references: [id])
  paperId    String?   @map("paper")
  paperTitle String    @default("")
  message    String    @default("")
  timestamp  DateTime? @default(now())

  @@index([paperId])
}
